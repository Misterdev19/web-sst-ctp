---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Asesorias integrales y calidad humana" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<Footer/>
	</body>
</html>
<style is:global>
@keyframes typing {
  0% {
    width: 0;
  }
  50% {
    width: 100%;
  }
  100% {
    width: 0;
  }
}

@keyframes blink-caret {
  from, to {
    border-color: transparent;
  }
  50% {
    border-color: rgb(255, 255, 255);
  }
}

.typing-effect {
  overflow: hidden; /* Para ocultar el texto que no está dentro del ancho visible */
  white-space: nowrap; /* Evitar que el texto baje a la siguiente línea */
  border-right: 2px solid rgb(255, 255, 255); /* El cursor que parpadea */
  width: 0;
  animation: typing 4s steps(30, end) infinite, blink-caret 0.75s step-end infinite;
}

@keyframes circle-in-top-left {
  from {
    clip-path: circle(0%);
  }
  to {
    clip-path: circle(150% at top left);
  }
}

[transition-style="in:circle:top-left"] {
  animation: 4s cubic-bezier(.25, 1, .30, 1) circle-in-top-left both;
}


</style>

